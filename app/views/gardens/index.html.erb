<p id="notice"><%= notice %></p>

<h1>Listing Gardens</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Garden Style</th>
      <th>Structure</th>
      <th>Started</th>
      <th>Sun</th>
      <th>Soil</th>
      <th>Drainage</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gardens.each do |garden| %>
      <tr>
        <td><%= garden.name %></td>
        <td><%= garden.garden_type %></td>
        <td><%= garden.structure %></td>
        <td><%= garden.started %></td>
        <td><%= garden.sun %></td>
        <td><%= garden.soil %></td>
        <td><%= garden.drainage %></td>
        <td><%= garden.location %></td>
        <td><%= link_to 'Show', garden %></td>
        <td><%= link_to 'Edit', edit_garden_path(garden) %></td>
        <td><%= link_to 'Destroy', garden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

