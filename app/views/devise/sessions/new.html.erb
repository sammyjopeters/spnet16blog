<div class="login container">
  <h2>Yo. Can I see some ID?</h2>

  <div class="row">
    <div class="col-xs-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'col s6') do |f| %>

        <div class="row">
          <div class="form-group col s3">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col s3">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="row">
            <div class="form-group col s3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-default' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-xs-6">
      <div class="magic-word">
        <h6><a href="https://www.youtube.com/watch?v=RfiQYRn7fBg">"Uh uh uh! You didn't say the magic word!"</a></h6>
        <%= image_tag 'uhuh.gif' %>
      </div>
    </div>
  </div>
</div>

